<h2>{{ data.title }}</h2>

{{#if message.success}}
    <div class="success notice">
        <p>{{ message.success }}</p>
    </div>
{{/if}}

<form method="POST" enctype="application/x-www-form-urlencoded" action="/product/{{ data.product.id }}">
    <input name="_method" type="hidden" value="{{ data.method }}">

    <input name="name" type="text" value="{{ data.product.name }}">
    <input name="price" type="text" value="{{ data.product.price }}">
    <input name="imageUrl" type="text" value="{{ data.product.imageUrl }}">
    <textarea name="description">{{ data.product.description }}</textarea>

    <button type="submit">Save Product</button>
</form>
